---
export interface Props {
  icon: any;
  iconSize?: number;
  title: string;
  description: string;
}

const { icon: Icon, iconSize = 24, title, description } = Astro.props;
---

<div
  class="bg-white border border-green-50 rounded-xl p-4 md:p-6 shadow-sm hover:shadow-md transition-all duration-300 hover:border-green-200"
>
  <div class="flex items-start gap-3">
    <Icon className="text-green-600 shrink-0 mt-1" size={iconSize} />
    <div>
      <h4 class="font-semibold text-base md:text-lg mb-2">
        {title}
      </h4>
      <p class="text-gray-600 text-sm md:text-base">
        {description}
      </p>
    </div>
  </div>
</div>
