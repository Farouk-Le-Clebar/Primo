---
export interface Props {
  icon: any;
  iconSize?: number;
  title: string;
  description: string;
}

const { icon: Icon, iconSize = 20, title, description } = Astro.props;
---

<div class="border-l-4 border-green-600 pl-4">
  <h4 class="font-semibold text-lg mb-2 flex items-center gap-2">
    <Icon size={iconSize} className="text-green-600" />
    {title}
  </h4>
  <p class="text-gray-600">
    {description}
  </p>
</div>
