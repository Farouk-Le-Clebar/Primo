---
export interface Props {
  icon: any;
  iconSize?: number;
  title: string;
  subtitle: string;
  features: string[];
  highlighted?: boolean;
}

const {
  icon: Icon,
  iconSize = 32,
  title,
  subtitle,
  features,
  highlighted = false,
} = Astro.props;

const cardClasses = highlighted
  ? "bg-linear-to-br from-green-50 to-white border-2 border-green-500 rounded-xl p-6 md:p-8 shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-1 relative overflow-hidden"
  : "bg-white border border-green-100 rounded-xl p-6 md:p-8 shadow-md hover:shadow-xl transition-all duration-300 hover:-translate-y-1";
---

<div class={cardClasses}>
  {
    highlighted && (
      <div class="absolute top-0 right-0 w-32 h-32 bg-green-100 rounded-full -mr-16 -mt-16 opacity-50" />
    )
  }
  <div
    class={`bg-green-100 w-fit p-3 rounded-lg mb-4 ${highlighted ? "relative z-10" : ""}`}
  >
    <Icon className="text-green-600" size={iconSize} />
  </div>
  <h3
    class={`text-xl md:text-2xl font-bold mb-2 ${highlighted ? "relative z-10" : ""}`}
  >
    {title}
  </h3>
  <p
    class={`text-gray-600 mb-6 text-sm md:text-base ${highlighted ? "relative z-10" : ""}`}
  >
    {subtitle}
  </p>

  <ul class={`space-y-3 ${highlighted ? "relative z-10" : ""}`}>
    {
      features.map((feature) => (
        <li class="flex items-start gap-2">
          <svg
            class="text-green-600 shrink-0 mt-1"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <polyline points="20 6 9 17 4 12" />
          </svg>
          <span class="text-gray-700 text-sm md:text-base">{feature}</span>
        </li>
      ))
    }
  </ul>
</div>
