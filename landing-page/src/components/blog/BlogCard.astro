---
interface Props {
  title: string;
  slug: string;
  date: string;
  description: string;
  tags: string[];
}

const { title, slug, date, description, tags } = Astro.props;

const formattedDate = new Date(date).toLocaleDateString("fr-FR", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<a href={`/blog/${slug}`} class="block h-full">
  <article
    class="h-full p-6 bg-white border border-gray-200 rounded-lg hover:shadow-lg transition-shadow duration-300"
  >
    <div class="flex flex-col h-full">
      <div class="mb-3">
        <time class="text-sm text-gray-500">{formattedDate}</time>
      </div>

      <h3
        class="text-xl font-bold text-gray-900 mb-3 hover:text-blue-600 transition-colors"
      >
        {title}
      </h3>

      <p class="text-gray-600 mb-4 grow">
        {description}
      </p>

      <div class="flex flex-wrap gap-2">
        {
          tags.map((tag) => (
            <span class="px-3 py-1 text-xs font-medium bg-blue-100 text-blue-800 rounded-full">
              {tag}
            </span>
          ))
        }
      </div>
    </div>
  </article>
</a>
