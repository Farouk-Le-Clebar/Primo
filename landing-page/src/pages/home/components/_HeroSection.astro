---
import { ArrowUpRight } from "lucide-react";
import backgroundWhite from "@assets/backgrounds/backgroundWhite.svg?url";
import { EXTERNAL_LINKS, CTA_TEXTS } from "@config/constants";
---

<section
  id="home"
  class="h-screen flex flex-col justify-center items-center text-center bg-cover bg-center bg-no-repeat relative"
  style={`background-image: url(${backgroundWhite});`}
>
  <div class="absolute inset-0 bg-white/60"></div>

  <div class="relative z-10">
    <h1 class="text-5xl font-bold mb-6">
      Cherchez moins, <br />
      trouvez plus avec <span class="text-green-600">Primo.</span>
    </h1>
    <p class="text-gray-700 mb-8 max-w-lg mx-auto">
      Une plateforme pens√©e pour simplifier votre recherche et vous faire gagner
      du temps.
    </p>
    <div class="flex space-x-4 justify-center">
      <a
        href={EXTERNAL_LINKS.BETA_FORM}
        target="_blank"
        rel="noopener noreferrer"
        class="border border-green-600 text-green-600 px-6 py-2 rounded-lg hover:bg-green-50 transition"
      >
        {CTA_TEXTS.ACCESS_BETA}
      </a>
    </div>
  </div>
</section>
