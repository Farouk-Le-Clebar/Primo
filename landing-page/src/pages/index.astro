---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/navbar/Navbar";
import HeroSection from "./home/components/_HeroSection.astro";
import FeaturesSection from "./home/components/_FeaturesSection.astro";
import ServicesSection from "./home/components/_ServicesSection.astro";
import AboutSection from "./home/components/_AboutSection.astro";
import Footer from "../components/footer/Footer.astro";
---

<Layout
  title="Primo - Toutes les informations cadastrales en un clic"
  description="Accédez gratuitement aux données cadastrales, PLU, risques naturels et qualité de vie de n'importe quelle parcelle en France. Plateforme intuitive avec assistant IA."
>
  <Navbar client:load />
  <div class="flex flex-col">
    <HeroSection />
    <FeaturesSection />
    <ServicesSection />
    <AboutSection />
    <Footer />
  </div>
</Layout>
